{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "baseUrl": "./lib",
    "declaration": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "lib/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [
    "lib/index.ts"
  ]
}